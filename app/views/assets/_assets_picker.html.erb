<%= link_to 'Close', '#', class: 'modal_close' %>

<div class='large-10 large-centered small-12 small-centered columns'>
	<div class='entries' id='selectable'>
		<h5>
			<% path = relative_path(asset_dir, "").try(:gsub, /\/$/, '').try(:gsub, '/', ' >> ') %>
			<%= path.present? ?  "Top >> #{path}" :  "Top" %>
		</h5>
		<div class='row'>
			<div class='small-11 columns'>
				<% asset_list(asset_dir).each do |asset| %>
					<div class='entry listable'>
						<%= link_to(asset[:name], 
											assets_path(relative_path(asset_dir, asset[:name])), 
											class: asset[:kind]) %>			
						</div>
				<% end %>						
			</div>
			<div class='small-1 columns'>	
			</div>
		</div>
	</div>

	<div class='actions'>
		<div class='row' style='text-align: center'>
			<div class='small-6 columns'>
				<%= link_to 'Select', '#', class: 'button small secondary radius disabled modal_select'  %>
			</div>
			<div class='small-6 columns'>
				<%= link_to 'Cancel', '#', class: 'button small secondary radius modal_close'  %>
			</div>					
		</div>								
	</div>			
</div>

